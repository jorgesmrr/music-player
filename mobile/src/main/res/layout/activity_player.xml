<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <br.jm.music.ui.SquaredImageView
        android:id="@+id/art"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/elevation_toolbar"
        android:scaleType="centerCrop"
        android:transitionName="image"
        app:measure_with="width" />

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@drawable/shadow_topdown"
        android:elevation="@dimen/elevation_toolbar" />

    <include
        layout="@layout/include_toolbar"
        android:elevation="@dimen/elevation_toolbar" />

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/art"
        android:background="@color/default_dark_vibrant_color"
        android:elevation="@dimen/elevation_toolbar"
        android:orientation="vertical"
        android:padding="@dimen/margin_screen">

        <TextView
            android:id="@+id/title"
            style="@style/Headline.SingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/SubtitleInverse.SingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/position"
            style="@style/SubtitleInverse.SingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/controllers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/bar"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shuffle"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_margin="@dimen/margin_view"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_shuffle_white_24dp"
            android:tint="@color/grey_icon" />

        <ImageView
            android:id="@+id/prev"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_margin="@dimen/margin_view"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_skip_previous_white_24dp"
            android:tint="@color/grey_icon" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_view"
            android:src="@drawable/ic_pause_resume"
            app:backgroundTint="@color/default_vibrant_color"
            app:borderWidth="0dp" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_margin="@dimen/margin_view"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_skip_next_white_24dp"
            android:tint="@color/grey_icon" />

        <ImageView
            android:id="@+id/repeat"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_margin="@dimen/margin_view"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_repeat_white_24dp"
            android:tint="@color/grey_icon" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_toolbar"
        android:padding="0dp" />

</RelativeLayout>
