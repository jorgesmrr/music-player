<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/texts"
        android:background="@color/default_dark_vibrant_color"
        android:elevation="@dimen/elevation_toolbar" />

    <include
        layout="@layout/include_toolbar"
        android:elevation="@dimen/elevation_toolbar" />

    <FrameLayout
        android:id="@+id/art_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="@dimen/list_item_text_margin_start"
        android:background="@android:color/white"
        android:elevation="6dp">

        <com.example.android.uamp.ui.SquaredImageView
            android:id="@+id/art"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="image"
            app:measure_with="height" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_toRightOf="@+id/art_container"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="@dimen/margin_screen"
        android:showDividers="middle">

        <TextView
            android:id="@+id/title"
            style="@style/Subtitle.SingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/SubtitleInverse.SingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/extra"
            style="@style/SubtitleInverse.SingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"
        android:layout_marginLeft="@dimen/margin_screen"
        android:layout_marginRight="@dimen/margin_screen"
        android:layout_marginTop="@dimen/margin_screen"
        android:layout_toRightOf="@+id/art_container"
        android:elevation="@dimen/elevation_toolbar" />

    <LinearLayout
        android:id="@+id/controllers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/seekBar"
        android:layout_toRightOf="@+id/art_container"
        android:divider="@drawable/view_spacer"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shuffle"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_shuffle_white_24dp"
            android:tint="@color/grey_icon" />

        <ImageView
            android:id="@+id/prev"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_skip_previous_grey600_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause_resume"
            app:backgroundTint="@color/default_vibrant_color"
            app:borderWidth="0dp" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_skip_next_grey600_24dp" />

        <ImageView
            android:id="@+id/repeat"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_repeat_white_24dp"
            android:tint="@color/grey_icon" />
    </LinearLayout>

</RelativeLayout>
