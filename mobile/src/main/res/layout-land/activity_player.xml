<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:minWidth="350dp"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/default_dark_vibrant_color"
            android:elevation="@dimen/elevation_toolbar"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetStart="@dimen/keyline"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <LinearLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation_toolbar"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_screen"
            android:paddingRight="@dimen/margin_screen"
            android:paddingBottom="@dimen/margin_screen"
            android:showDividers="middle">

            <TextView
                android:id="@+id/title"
                style="@style/Headline.SingleLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/subtitle"
                style="@style/SubtitleInverse.SingleLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/position"
                style="@style/SubtitleInverse.SingleLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_view"
            android:layout_marginRight="@dimen/margin_view"
            android:layout_marginTop="@dimen/margin_screen"
            android:elevation="@dimen/elevation_toolbar" />

        <LinearLayout
            android:id="@+id/controllers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/view_spacer"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shuffle"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/margin_view"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/ic_shuffle_white_24dp"
                android:tint="@color/grey_icon" />

            <ImageView
                android:id="@+id/prev"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/margin_view"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/ic_skip_previous_white_24dp"
                android:tint="@color/grey_icon" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_view"
                android:src="@drawable/ic_pause_resume"
                app:backgroundTint="@color/default_vibrant_color"
                app:borderWidth="0dp" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/margin_view"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/ic_skip_next_white_24dp"
                android:tint="@color/grey_icon" />

            <ImageView
                android:id="@+id/repeat"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/margin_view"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/ic_repeat_white_24dp"
                android:tint="@color/grey_icon" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/art"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerCrop" />

</LinearLayout>
